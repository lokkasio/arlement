{
  "name": "arlement",
  "version": "0.1.2",
  "description": "Extendable DOM selector engine",
  "keywords": [
    "arlement",
    "selector"
  ],
  "homepage": "https://github.com/lokkasio/arlement",
  "bugs": {
    "url": "https://github.com/lokkasio/arlement/issues"
  },
  "license": "Unlicense",
  "author": "Lukas Mestel",
  "files": [
    "arlement.*js"
  ],
  "browser": "arlement.js",
  "repository": "lokkasio/arlement",
  "scripts": {
    "test": "karma start",
    "pretest": "rollup --format=umd --file=test.js -- arlement.spec.js",
    "lint": "standard",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "husky": "^4.2.1",
    "karma": "^4.4.1",
    "karma-firefox-launcher": "^1.3.0",
    "karma-qunit": "^4.0.0",
    "qunit": "^2.9.3",
    "rollup": "^1.31.0",
    "standard": "^14.3.1",
    "standard-version": "^7.1.0"
  },
  "standard": {
    "env": {
      "browser": true,
      "qunit": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
